<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml" fx:controller="application.JoinTeamController">
    <Label text="Join a Team"/>
    <ComboBox fx:id="teamCombo"/>
    <TextField fx:id="nameField" promptText="Name"/>
    <TextField fx:id="firstNameField" promptText="First Name"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <TextField fx:id="phoneField" promptText="Phone"/>
    <Button text="Join" onAction="#handleJoin"/>
    <Label fx:id="messageLabel"/>
</VBox>
